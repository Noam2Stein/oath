{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: install",
            "type": "shell",
            "command": "npm install",
            "group": "build",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            }
        },
        {
            "label": "npm: start",
            "type": "shell",
            "command": "npm run start",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            }
        },
        {
            "label": "all",
            "dependsOn": [
                "npm: install",
                "npm: start"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}