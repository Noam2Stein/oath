{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Rust Server",
      "type": "shell",
      "command": "cargo build -p oath_editor_server",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "Build TypeScript Client",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/editor_client"
      }
    },
    {
      "label": "Build All",
      "dependsOn": [
        "Build Rust Server",
        "Build TypeScript Client"
      ]
    }
  ]
}