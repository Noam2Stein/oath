{
  "name": "oath",
  "description": "VSCode Oath language support",
  "author": "Noam Stein",
  "license": "MIT",
  "version": "1.0.0",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "oath",
        "aliases": ["Oath", "oath"],
        "extensions": [".oath"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "oath",
        "scopeName": "source.oath",
        "path": "./syntaxes/oath.tmLanguage.json"
      }
    ],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
