{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./out",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vscode"
        ] // Add this line to include VSCode types during compilation
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}